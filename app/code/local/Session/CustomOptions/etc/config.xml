<?xml version="1.0"?>
<config>
    <modules>
        <Session_CustomOptions>
            <version>0.1.0</version>
        </Session_CustomOptions>
    </modules>
    <global>
        <models>
            <session_customoptions>
                <class>Session_CustomOptions_Model</class>
                <resourceModel>session_customoptions_resource</resourceModel>
            </session_customoptions>
            <session_customoptions_resource>
                <class>Session_CustomOptions_Model_Resource</class>
            </session_customoptions_resource>
        </models>
        <blocks>
            <session_customoptions>
                <class>Session_CustomOptions_Block</class>
            </session_customoptions>
        </blocks>
        <helpers>
            <session_customoptions>
                <class>Session_CustomOptions_Helper</class>
            </session_customoptions>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <session_customoptions before="Mage_Adminhtml">Session_CustomOptions_Adminhtml</session_customoptions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <session_customoptions>
                    <file>session_customoptions.xml</file>
                </session_customoptions>
            </updates>
        </layout>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <session_customoptions>
                        <class>session_customoptions/observer</class>
                        <method>addEditOptionsLink</method>
                    </session_customoptions>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </adminhtml>
</config>